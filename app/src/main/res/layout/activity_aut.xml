        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:text="Agents Immobiliers"
            android:transitionName="button_tran"
            android:background="@drawable/rounded_button"/> <!-- Utiliser le drawable ici -->
    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_login_btn"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:text="Promoteurs Immobiliers"
        android:textColor="#fff"
        android:transitionName="button_tran"
        android:background="@drawable/rounded_button"/>
        <!--        android:background="#000"-->

        <Button
            android:id="@+id/btnetatdossier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_join_now_btn"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:text="Voir etat de traitement"
            android:textColor="#fff"
            android:transitionName="button_tran"
            android:background="@drawable/rounded_button"/>
        <!-- android:background="   #000"-->

        <TextView
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partie Admin"
            android:textSize="19sp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"/>

    </LinearLayout>

